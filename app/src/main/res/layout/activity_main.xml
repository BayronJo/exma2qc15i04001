<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fondo"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center"
    tools:context=".MainActivity">

       <LinearLayout
           android:orientation="vertical"
           android:background="@color/blanco"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginBottom="20dp">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Agenda Contactos"
               android:textSize="24sp"
               android:textColor="@color/Celeste"
               android:textStyle="bold"
               android:textAlignment="center"
               android:layout_marginTop="10dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_gravity="center_vertical">
                   <Button
                       android:id="@+id/btnNewContacto"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:text="Agregar Contacto"
                       android:background="@drawable/corner_radius_button"
                       android:height="40dp"
                       android:textColor="@color/blanco"
                       android:layout_marginBottom="20dp"
                       android:textSize="12sp"
                       android:elevation="5dp"/>
                   <Button
                       android:id="@+id/btnListaContacto"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:text="Listar Contactos"
                       android:textColor="@color/blanco"
                       android:background="@drawable/corner_radius_button"
                       android:height="40dp"
                       android:layout_marginBottom="20dp"
                       android:elevation="5dp"
                       android:textSize="12sp"/>
                   <Button
                       android:id="@+id/btnListaOrdenada"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:text="Lista contactos Ordenados"
                       android:background="@drawable/corner_radius_button"
                       android:height="40dp"
                       android:textColor="@color/blanco"
                       android:layout_marginBottom="20dp"
                       android:elevation="5dp"
                       android:textSize="12sp"/>
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
</LinearLayout>